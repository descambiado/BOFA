# BOFA Extended Systems v2.5.0 - Environment Variables Template
# Copy this file to .env and fill in your values

# Application Configuration
VITE_APP_NAME=BOFA Extended Systems
VITE_APP_VERSION=2.5.0
VITE_API_URL=http://localhost:8000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://bofa:bofa123@localhost:5432/bofa_db
POSTGRES_DB=bofa_db
POSTGRES_USER=bofa
POSTGRES_PASSWORD=bofa123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=bofa123

# JWT and Security
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here

# External API Keys (Optional)
SHODAN_API_KEY=your_shodan_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
HIBP_API_KEY=your_haveibeenpwned_api_key_here
GITHUB_TOKEN=your_github_token_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/bofa/app.log

# Docker Configuration
COMPOSE_PROJECT_NAME=bofa
COMPOSE_HTTP_TIMEOUT=300

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
REDIS_EXPIRE_TIME=3600

# Development Configuration
DEBUG=true
RELOAD=true